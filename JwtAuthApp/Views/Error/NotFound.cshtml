@{
    ViewData["Title"] = "Página não encontrada";
}

<div class="container-fluid vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="row w-100">
        <div class="col-md-6 mx-auto text-center">
            <div class="card shadow-lg">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="fas fa-exclamation-triangle fa-5x text-warning mb-3"></i>
                        <h1 class="display-4 text-primary">404</h1>
                        <h3 class="card-title">Página não encontrada</h3>
                        <p class="text-muted">A página que você está procurando não existe ou foi movida.</p>
                    </div>
                    
                    <div class="mb-4">
                        <a href="/Home/Dashboard" class="btn btn-primary me-2">
                            <i class="fas fa-home me-1"></i>Voltar ao Dashboard
                        </a>
                        <a href="javascript:history.back()" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Voltar
                        </a>
                    </div>

                    <div class="mt-4">
                        <small class="text-muted">
                            Se você acredita que isso é um erro, entre em contato com o suporte.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Ocultar navbar na tela de erro
        document.getElementById('mainNav').style.display = 'none';
    </script>
} 