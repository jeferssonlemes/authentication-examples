@{
    ViewData["Title"] = "Acesso negado";
}

<div class="container-fluid vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="row w-100">
        <div class="col-md-6 mx-auto text-center">
            <div class="card shadow-lg">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="fas fa-ban fa-5x text-danger mb-3"></i>
                        <h1 class="display-4 text-danger">403</h1>
                        <h3 class="card-title">Acesso negado</h3>
                        <p class="text-muted">Você não tem permissão para acessar esta funcionalidade.</p>
                    </div>
                    
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Permissão insuficiente:</strong> Entre em contato com um administrador para solicitar acesso.
                    </div>
                    
                    <div class="mb-4">
                        <a href="/Home/Dashboard" class="btn btn-primary me-2">
                            <i class="fas fa-home me-1"></i>Voltar ao Dashboard
                        </a>
                        <a href="javascript:history.back()" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Voltar
                        </a>
                    </div>

                    <div class="mt-4">
                        <small class="text-muted">
                            Suas permissões atuais não permitem acesso a esta área do sistema.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Mostrar navbar na tela de erro de permissão (usuário está logado)
        const token = localStorage.getItem('jwt_token');
        if (token) {
            document.getElementById('mainNav').style.display = 'block';
            checkAuthentication();
        } else {
            document.getElementById('mainNav').style.display = 'none';
        }
    </script>
} 