                    <button type="button" class="btn btn-warning w-100" onclick="runStressTest()">
                        <i class="fas fa-bolt"></i> Executar Teste de Stress
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Login Simulation -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
