                        <select id="testEndpoint" class="form-control">
                            <option value="test-general">Pol√≠tica Geral</option>
                            <option value="test-auth">Pol√≠tica Auth</option>
                            <option value="test-rapid">Pol√≠tica R√°pida</option>
                            <option value="test-global">Pol√≠tica Global</option>
                        </select>
