                        </div>
                        <div class="col-md-2">
                            <h6>Avg Response</h6>
                            <span id="avgResponseTime" class="badge badge-secondary fs-6">0ms</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
